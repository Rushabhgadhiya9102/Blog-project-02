<%- include('../partials/header') %>

<section
  class="bg-indigo-950 min-h-screen flex flex-col bg-cover bg-norepeat bg-[url('../../images/bg-gradient-2.png')]"
>
  <div class="container px-5 mx-auto lg:max-w-7xl pb-40">
    <!-- Cover Section -->
    <div class="relative h-56">
      <!-- Cover Image -->
      <img
        src="<%= user.coverImage || '../../images/cover-image.png' %>"
        alt="Cover Image"
        class="w-full h-56 object-cover absolute top-0 left-0 opacity-60 rounded-b-2xl"
      />
      <!-- Profile Picture -->
      <div
        class="absolute bottom-0 left-1/2 transform -translate-x-1/2 translate-y-1/2"
      >
        <img
          src="<%= user.profileImage || '/images/default-avatar.png' %>"
          alt="Profile"
          class="w-32 h-32 rounded-full border-4 border-white shadow-lg object-cover"
        />
      </div>
    </div>

    <!-- Main Profile Content -->
    <div class="flex flex-col items-center mt-20 px-4">
      <!-- Name & Tagline -->
      <h2 class="text-3xl font-bold text-white"><%= user.userName %></h2>
      <p class="text-white mt-1"><%= user.email %></p>
      <p class="text-gray-400 mt-1">
        Joined at: <%= new Date(user.createdAt).toLocaleDateString('en-GB',
        {day:'2-digit', month:'long', year:'numeric'}) %></p
      >

      <!-- About Section -->
      <div class="max-w-2xl mt-8 text-center">
        <h2 class="text-xl font-semibold text-white mb-2">About Me</h2>
        <p class="leading-relaxed text-gray-400">
          <%= user.bio || " No data " %>
        </p>
      </div>

      <!-- Skills / Topics -->
      <div class="max-w-2xl mt-6">
        <h2 class="text-xl font-semibold text-white mb-3 text-center"
          >Topics I Write About</h2
        >
        <div class="flex flex-wrap justify-center gap-2">
          <% uniqueCategories.forEach(category => { %>
          <span class="bg-indigo-800 text-white px-3 py-1 rounded-sm text-sm"
            ><%= category %>
          </span>
          <% }) %>
        </div>
      </div>

      <!-- Recent Blogs -->
      <div class="max-w-4xl w-full mt-10">
        <h2 class="text-xl font-semibold text-white mb-5 text-center"
          >Recent Blogs</h2
        >
        <div class="grid md:grid-cols-2 gap-6">
          <% if (blogs.length > 0) { %> <% blogs.slice(0,6).forEach(blog => { %>
          <div class="category-item h-50 overflow-hidden rounded-4xl">
            <div
              class="card relative hover:scale-102 duration-300 transition-all bg-cover bg-center w-full h-full"
            >
              <img src="<%= blog.blogImage %>" alt="" />
              <div class="absolute top-0 bottom-0 left-0 right-0">
                <div
                  class="w-full h-full flex items-end bg-gradient-to-t from-black to-transparent"
                >
                  <div class="content p-5 mx-auto text-center">
                    <a
                      href="/blogDetails/<%= blog._id %>"
                      class="text-2xl hover:underline font-medium text-white"
                      ><%= blog.title %></a
                    >
                    <p class="text-lg font-medium text-gray-500"
                      ><%= blog.category %></p
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }) %> <% } else { %>
          <p class="text-gray-500 text-center col-span-2"
            >No blogs published yet.</p
          >
          <% } %>
        </div>
      </div>

      <!-- Contact Button -->
      <div class="mt-10 text-center">
        <div class="flex gap-x-3">
          <a href="/editProfile" class="bg-indigo-600 rounded-md py-1.5 px-7 text-white"
            >Edit</a
          >
          <span class="border-r border-gray-600"></span>
          <a href="/logout" class="bg-red-600 rounded-md py-1.5 px-3 text-white"
            >Logout</a
          >
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>
